{
    "name": "@amp-labs/docs",
    "scripts": {
        "dev": "mintlify dev",
        "test:links": "mintlify broken-links; exitCode=$?; exit $exitCode",
        "gen": "pnpm run generate",
        "generate": "run-s download-spec:* && run-s gen-api-pages:* && pnpm gen-mint",
        "download-spec:platform": "curl --fail https://raw.githubusercontent.com/amp-labs/openapi/main/api/generated/api.json > ./api.json",
        "download-spec:read": "curl --fail https://raw.githubusercontent.com/amp-labs/openapi/main/api/generated/read.json > ./read.json",
        "download-spec:write": "curl --fail https://raw.githubusercontent.com/amp-labs/openapi/main/api/generated/write.json > ./write.json",
        "gen-api-pages:dir": "rm -rf reference && mkdir -p reference",
        "gen-api-pages:platform": "mintlify-scrape openapi-file -o reference api.json | tail -n +2 > ./reference/platform.json",
        "gen-api-pages:read": "mintlify-scrape openapi-file -o reference read.json | tail -n +2 > ./reference/read.json",
        "gen-api-pages:write": "mintlify-scrape openapi-file -o reference write.json | tail -n +2 > ./reference/write.json",
        "gen-mint": "npx tsx generate-mint.ts mint.json"
    },
    "devDependencies": {
        "@mintlify/scraping": "*",
        "@types/node": "^20.14.10",
        "mintlify": "4.0.185",
        "npm-run-all": "^4.1.5"
    }
}